<form method="POST" action="/figures">

  <label for="figure_name">Figure Name: </label>
  <input type="text" id="figure_name" name="figure[name]" /><br />

  Title: <br />
  <% @titles.each do |title| %>
    <input type="checkbox" id="<%= title.name %>" name="<%= title.id %>" value="<%= title.name %>"><%= title.name %></input><br />
  <% end %>

  <label for="new_title">New Title: </label>
  <input type="text" id="new_title" /><br />

  <label for="new_landmark">New Landmark: </label>
  <input type="text" id="new_landmark" /><br />


  <input type="submit" value="Create New Figure" />
</form>
